# ========================================
# SURVIVOR AI - CONFIGURATION
# ========================================
# Copy this file to .env and fill in your actual values
# For Google Colab: Store ODDS_API_KEY in Colab Secrets

# ----------------------------------------
# Real-Time Data Sources (REQUIRED for optimal accuracy)
# ----------------------------------------

# The Odds API - Get FREE API key at: https://the-odds-api.com/
# Sign up for free account: 500 requests/month (more than enough for weekly picks)
# This provides LIVE betting odds for the most accurate win probabilities
ODDS_API_KEY=your_api_key_here

# ----------------------------------------
# NFL Season Configuration (Auto-detected if not set)
# ----------------------------------------

# Current NFL season year (auto-detected from current date)
CURRENT_SEASON=2025

# Current NFL week (1-18, auto-detected from current date)
CURRENT_WEEK=7

# ----------------------------------------
# Cache Configuration
# ----------------------------------------

CACHE_DIR=cache
CACHE_EXPIRY_HOURS=6

# ----------------------------------------
# ML Model Configuration
# ----------------------------------------

ML_MODEL_DIR=models
ML_TRAINING_DATA_DIR=data/training
ML_MODEL_TYPE=ensemble  # Options: random_forest, neural_network, xgboost, ensemble
USE_ML_PREDICTIONS=true  # Set to 'true' to enable ML enhancement (recommended)

# ----------------------------------------
# Feature Engineering
# ----------------------------------------

USE_ADVANCED_FEATURES=true
INCLUDE_HISTORICAL_DATA=true
HISTORICAL_SEASONS=3
PYTHAGOREAN_EXPONENT=2.37  # NFL-optimized (research-backed)

# ----------------------------------------
# Prediction Configuration
# ----------------------------------------

CONFIDENCE_THRESHOLD=0.6
ENSEMBLE_WEIGHTS=0.4,0.3,0.3  # Random Forest, Neural Network, XGBoost

# ----------------------------------------
# Google Colab Configuration
# ----------------------------------------

# GitHub repository URL (for cloning in Colab)
GITHUB_REPO=https://github.com/elliotttmiller/survivorai.git
GITHUB_BRANCH=main

# Auto-install dependencies in Colab
AUTO_INSTALL_DEPENDENCIES=true

# ========================================
# DATA SOURCES OVERVIEW
# ========================================
